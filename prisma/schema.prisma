// Prisma Schema für AzuBite - Kollaborative Plattform für Auszubildende

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Nutzer-Modell
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?   // Nullable für OAuth-Nutzer
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Beziehungen
  accounts      Account[]
  sessions      Session[]
  reports       Report[]
  comments      Comment[]
  ratings       Rating[]
  groups        GroupMember[]
  ownedGroups   Group[]       @relation("GroupOwner")
  notifications Notification[]
  invitations   GroupInvitation[] @relation("Inviter")
  receivedInvitations GroupInvitation[] @relation("Invitee")

  @@map("users")
}

// NextAuth Account-Modell
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session-Modell
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth VerificationToken-Modell
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Berichtsheft-Modell
model Report {
  id              String        @id @default(cuid())
  title           String
  description     String?       @db.Text
  fileUrl         String        // S3/R2 URL
  fileName        String
  fileSize        Int           // in Bytes
  fileType        String        // PDF oder DOCX
  visibility      Visibility    @default(PRIVATE)
  profession      String?       // Berufsbezeichnung
  trainingYear    Int?          // Ausbildungsjahr (1-3)
  tags            String[]      // Array von Tags
  downloadCount   Int           @default(0)
  averageRating   Float         @default(0)
  ratingCount     Int           @default(0)
  
  authorId        String
  groupId         String?       // Optional: zugehörige Gruppe
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Beziehungen
  author          User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  group           Group?        @relation(fields: [groupId], references: [id], onDelete: SetNull)
  comments        Comment[]
  ratings         Rating[]

  @@index([authorId])
  @@index([groupId])
  @@index([visibility])
  @@index([profession])
  @@index([trainingYear])
  @@map("reports")
}

// Gruppen-Modell
model Group {
  id              String          @id @default(cuid())
  name            String
  description     String?         @db.Text
  isPublic        Boolean         @default(true)
  avatar          String?
  inviteToken     String?         @unique // Token für Einladungs-Links
  
  ownerId         String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Beziehungen
  owner           User            @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members         GroupMember[]
  reports         Report[]
  invitations     GroupInvitation[]

  @@index([ownerId])
  @@index([isPublic])
  @@map("groups")
}

// Gruppenmitgliedschaft
model GroupMember {
  id        String      @id @default(cuid())
  userId    String
  groupId   String
  role      GroupRole   @default(MEMBER)
  joinedAt  DateTime    @default(now())

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     Group       @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
  @@map("group_members")
}

// Gruppeneinladungen
model GroupInvitation {
  id          String    @id @default(cuid())
  groupId     String
  inviterId   String
  inviteeId   String
  status      InvitationStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?

  group       Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  inviter     User      @relation("Inviter", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee     User      @relation("Invitee", fields: [inviteeId], references: [id], onDelete: Cascade)

  @@unique([groupId, inviteeId])
  @@index([inviteeId])
  @@index([groupId])
  @@map("group_invitations")
}

// Kommentare
model Comment {
  id          String    @id @default(cuid())
  content     String    @db.Text
  reportId    String
  authorId    String
  parentId    String?   // Für Thread-Struktur
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  report      Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")

  @@index([reportId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

// Bewertungen
model Rating {
  id          String    @id @default(cuid())
  reportId    String
  userId      String
  value       Int       // 1-5 Sterne
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  report      Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reportId, userId])
  @@index([reportId])
  @@index([userId])
  @@map("ratings")
}

// Benachrichtigungen
model Notification {
  id          String           @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?
  read        Boolean          @default(false)
  createdAt   DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@map("notifications")
}

// Enums
enum UserRole {
  USER
  ADMIN
  MODERATOR
}

enum Visibility {
  PRIVATE      // Nur der Autor
  GROUP        // Gruppenmitglieder
  PUBLIC       // Alle Nutzer
}

enum GroupRole {
  MEMBER
  ADMIN
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

enum NotificationType {
  COMMENT
  RATING
  INVITATION
  GROUP_JOIN
  REPORT_SHARED
  SYSTEM
}


